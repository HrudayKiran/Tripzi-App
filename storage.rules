rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ==================== HELPER FUNCTIONS ====================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isImage() {
      return request.resource != null &&
        request.resource.contentType.matches('image/.*');
    }

    function isVideo() {
      return request.resource != null &&
        request.resource.contentType.matches('video/.*');
    }

    function isAudio() {
      return request.resource != null &&
        request.resource.contentType.matches('audio/.*');
    }

    function isMediaFile() {
      return isImage() || isVideo() || isAudio();
    }

    function isValidSize() {
      return request.resource != null &&
        request.resource.size < 10 * 1024 * 1024;
    }

    function isValidVideoSize() {
      return request.resource != null &&
        request.resource.size < 100 * 1024 * 1024;
    }

    function isValidMediaSize() {
      return (isImage() && isValidSize()) ||
        (isAudio() && isValidSize()) ||
        (isVideo() && isValidVideoSize());
    }

    function isChatParticipant(chatId) {
      return isAuthenticated() &&
        firestore.exists(/databases/(default)/documents/chats/$(chatId)) &&
        request.auth.uid in firestore.get(
          /databases/(default)/documents/chats/$(chatId)
        ).data.participants;
    }

    function isReportOwner(reportId) {
      return isAuthenticated() &&
        firestore.exists(/databases/(default)/documents/reports/$(reportId)) &&
        firestore.get(
          /databases/(default)/documents/reports/$(reportId)
        ).data.reporterId == request.auth.uid;
    }

    // ==================== APP ASSETS ====================

    match /carousel/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // ==================== PROFILE IMAGES ====================

    match /profiles/{userId}/{fileName} {
      allow read: if true;
      allow create, update: if isOwner(userId) && isImage() && isValidSize();
      allow delete: if isOwner(userId);
    }

    // ==================== TRIP MEDIA ====================

    match /trips/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId) && isMediaFile() && isValidMediaSize();
      allow delete: if isOwner(userId);
    }

    match /trip_videos/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId) && isVideo() && isValidVideoSize();
      allow delete: if isOwner(userId);
    }

    // ==================== GROUP ICONS ====================

    match /groups/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId) && isImage() && isValidSize();
      allow delete: if isOwner(userId);
    }

    // Legacy one-level group icon paths kept read-only for backward compatibility.
    match /groups/{legacyFileName} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // ==================== CHAT MEDIA ====================

    match /chats/{chatId}/{allPaths=**} {
      allow read: if isChatParticipant(chatId);
      allow create, update: if isChatParticipant(chatId) && isMediaFile() && isValidMediaSize();
      allow delete: if isChatParticipant(chatId);
    }

    // ==================== REPORT EVIDENCE ====================

    match /reports/{reportId}/{allPaths=**} {
      allow read: if isReportOwner(reportId);
      allow create, update: if isReportOwner(reportId) && isImage() && isValidSize();
      allow delete: if isReportOwner(reportId);
    }

    // ==================== FEEDBACK ATTACHMENTS ====================

    match /feedback/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow create, update: if isOwner(userId) && isImage() && isValidSize();
      allow delete: if isOwner(userId);
    }
  }
}

