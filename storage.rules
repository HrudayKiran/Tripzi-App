rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ==================== HELPER FUNCTIONS ====================
    
    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Check if user owns the path
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Validate image file
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Validate video file
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }
    
    // Validate audio file
    function isAudio() {
      return request.resource.contentType.matches('audio/.*');
    }
    
    // Combined media check
    function isMediaFile() {
      return isImage() || isVideo() || isAudio();
    }
    
    // Validate file size (max 10MB for images/audio)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Validate video size (max 100MB)
    function isValidVideoSize() {
      return request.resource.size < 100 * 1024 * 1024;
    }
    
    // Check appropriate size based on file type
    function isValidMediaSize() {
      return (isImage() && isValidSize()) || 
             (isAudio() && isValidSize()) ||
             (isVideo() && isValidVideoSize());
    }
    
    // ==================== PROFILE IMAGES ====================
    
    // ==================== APP ASSETS ====================

    match /carousel/{allPaths=**} {
      allow read: if true; // Public read for welcome screen
      allow write: if isAdmin();
    }
    
    // ==================== PROFILE IMAGES ====================
    
    match /profiles/{userId}/{fileName} {
      // Anyone can read profile images
      allow read: if true;
      
      // Only the user can upload their profile images
      allow create, update: if isOwner(userId) && isImage() && isValidSize();
      // User can delete their profile images
      allow delete: if isOwner(userId);
    }
    
    // ==================== TRIP MEDIA (Images & Videos) ====================
    
    match /trips/{userId}/{allPaths=**} {
      // Anyone authenticated can read trip media
      allow read: if isAuthenticated();
      
      // Only the user can upload their trip media
      allow create, update: if isOwner(userId) && isMediaFile() && isValidMediaSize();
      // User can delete their trip media
      allow delete: if isOwner(userId);
    }

    // ==================== TRIP VIDEOS ====================
    
    match /trip_videos/{userId}/{allPaths=**} {
      // Anyone authenticated can read trip videos
      allow read: if isAuthenticated();
      
      // Only the user can upload their trip videos
      allow create, update: if isOwner(userId) && isVideo() && isValidVideoSize();
      // User can delete their trip videos
      allow delete: if isOwner(userId);
    }
    
    // Note: Stories removed in v1.0.0
    
    
    // Note: KYC documents removed in v1.0.0 - using ageVerified field on users
    
    
    // ==================== CHAT MEDIA (Images, Videos, Voice) ====================
    
    match /chats/{chatId}/{allPaths=**} {
      // Participants can read chat media (simplified - anyone authenticated)
      allow read: if isAuthenticated();
      
      // Authenticated users can upload media to chats
      allow create, update: if isAuthenticated() && isMediaFile() && isValidMediaSize();
      
      // Allow delete for chat cleanup
      allow delete: if isAuthenticated();
    }

    // ==================== REPORT EVIDENCE ====================
    
    match /reports/{reportId}/{allPaths=**} {
      // Only authenticated users can upload report evidence
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && isImage() && isValidSize();
      // Usually users don't delete report evidence, but if they could write, they could delete.
      allow delete: if isAuthenticated(); 
    }

    // ==================== FEEDBACK ATTACHMENTS ====================
    
    match /feedback/{userId}/{allPaths=**} {
      // Users can upload screenshots for bugs/suggestions
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId) && isImage() && isValidSize();
      allow delete: if isOwner(userId);
    }
  }
}

